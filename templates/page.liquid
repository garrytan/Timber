<div class="grid second-header">
  <div class="grid-item large--two-twelfths">
    <a href="/"><div class="logo-black"></div></a>
  </div>
  <div class="grid-item large--seven-twelfths">
    <h1>{{ page.title }}</h1>
  </div>
  <div class="grid-item large--three-twelfths free-shipping-wrapper">
    <div class="free-shipping">
      <div class="line-one">
        Free domestic shipping
      </div>
      <div class="line-two">
        on orders over $100
      </div>
    </div>
  </div>
</div>

<div class="grid">

  <div class="grid-item large--five-tenths push--large--one-sixth">

    {% comment %}
      Regular page content goes here.
    {% endcomment %}
    <div class="rte content">
      {{ page.content }}
    </div>

  </div>

</div>
