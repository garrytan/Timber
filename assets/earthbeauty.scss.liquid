.above-fold-hero {
  min-height: 800px;
  background: url('{{ 'hero-sept2014.jpg' | asset_url }}') no-repeat top center; 
  background-size: cover !important;
  position: relative; 

  .logo { 
    width: 334px; height: 30px; 
    background: url('{{ 'homepage-logo.png' | asset_url }}') no-repeat;
    margin-top: 300px;
  }
  .call-to-action { 
    margin-top: 25px;

    span { 
      color: #fff; margin: 0 10px; 
      font-size: 18px;
      font-family: 'Playfair Display', serif;
      font-style: italic; 
    }
  }
  border-bottom: 8px solid #222;

}
nav.nav-bar-index { 
  padding-top: 10px;
  a { 
    color: #eee; 
    text-transform: uppercase; 
    font-size: 15px; 
  }
  a:hover { color: #fff; }
}
a.eb-button {
  font-size: 18px;
  font-family: 'Playfair Display', serif;
  padding: 8px 15px;
  border-radius: 2px;
  color: #000;
  text-decoration: none;
  background-color: #968d94;
  background-color: rgba(255, 255, 255, 0.5);
}
a.eb-button:hover { 
  background-color: rgba(255, 255, 255, 0.8); 
}

a.eb-button.dark {
  color: #fff;
  background-color: #968d94;
  background-color: rgba(0, 0, 0, 0.5);
  border: 1px solid rgba(130, 130, 130, 0.5);
}
a.eb-button.dark:hover { 
  background-color: rgba(0, 0, 0, 0.8); 
}